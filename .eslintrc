{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "trailingComma": "none",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "jsxSingleQuote": true,
        "jsxBracketSameLine": true,
        "printWidth": 100
      }
    ],
    "no-console": "off",
    "no-unused-vars": "warn",
    "react/jsx-closing-bracket-location": [
      1,
      {
        "nonEmpty": false,
        "selfClosing": false
      }
    ]
  },
  "parser": "babel-eslint"
}
